<component>
	<!-- Main application layout: horizontal container with nav bar + content area -->
	<view extends="lv_obj" width="100%" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="row">
		<!-- Navigation bar (left side) -->
		<navigation_bar/>

		<!-- Content area (right side, grows to fill remaining space) -->
		<!-- All panels are stacked here, navigation controls visibility -->
		<lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0">
			<!-- Panel 0: Home (visible by default) -->
			<home_panel/>

			<!-- Panel 1: Print Select (hidden by default) -->
			<print_select_panel/>

			<!-- Panel 2: Controls (hidden by default) -->
			<controls_panel/>

			<!-- Panel 3: Filament (hidden by default) -->
			<filament_panel/>

			<!-- Panel 4: Settings (hidden by default) -->
			<settings_panel/>

			<!-- Panel 5: Advanced (hidden by default) -->
			<advanced_panel/>
		</lv_obj>
	</view>
</component>
