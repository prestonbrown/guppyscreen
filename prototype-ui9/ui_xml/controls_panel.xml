<?xml version="1.0"?>
<!-- Controls Panel Launcher - 6 Card Menu -->
<component>
	<view extends="lv_obj"
	      name="controls_panel"
	      width="100%"
	      height="100%"
	      style_bg_color="#panel_bg"
	      style_pad_all="20"
	      style_border_width="0"
	      flex_flow="row_wrap"
	      style_pad_gap="20"
	      flag_scrollable="true"
	      scroll_dir="ver">

				<!-- Card 1: Movement & Home -->
				<lv_obj name="card_motion"
				        width="400" height="200"
				        flex_flow="column"
				        flex_main_place="center"
				        flex_cross_place="center"
				        style_bg_color="#card_bg"
				        style_radius="12"
				        style_pad_all="24"
				        style_border_width="0">

					<!-- Icon -->
					<lv_label text="#icon_controls"
					          style_text_font="fa_icons_64"
					          style_text_color="#primary_color"
					          style_pad_bottom="16"/>

					<!-- Label -->
					<lv_label text="Movement &amp; Home"
					          style_text_font="montserrat_20"
					          style_text_color="#text_primary"
					          style_pad_bottom="8"/>

					<!-- Subtitle -->
					<lv_label text="XYZ jog &amp; homing"
					          style_text_font="montserrat_16"
					          style_text_color="#text_secondary"/>
				</lv_obj>

				<!-- Card 2: Nozzle Temperature -->
				<lv_obj name="card_nozzle_temp"
				        width="400" height="200"
				        flex_flow="column"
				        flex_main_place="center"
				        flex_cross_place="center"
				        style_bg_color="#card_bg"
				        style_radius="12"
				        style_pad_all="24"
				        style_border_width="0">

					<!-- Icon -->
					<lv_label text="#icon_home"
					          style_text_font="fa_icons_64"
					          style_text_color="#primary_color"
					          style_pad_bottom="16"/>

					<!-- Label -->
					<lv_label text="Nozzle Temp"
					          style_text_font="montserrat_20"
					          style_text_color="#text_primary"
					          style_pad_bottom="8"/>

					<!-- Subtitle -->
					<lv_label text="Heat nozzle"
					          style_text_font="montserrat_16"
					          style_text_color="#text_secondary"/>
				</lv_obj>

				<!-- Card 3: Heatbed Temperature -->
				<lv_obj name="card_bed_temp"
				        width="400" height="200"
				        flex_flow="column"
				        flex_main_place="center"
				        flex_cross_place="center"
				        style_bg_color="#card_bg"
				        style_radius="12"
				        style_pad_all="24"
				        style_border_width="0">

					<!-- Icon -->
					<lv_label text="#icon_home"
					          style_text_font="fa_icons_64"
					          style_text_color="#primary_color"
					          style_pad_bottom="16"/>

					<!-- Label -->
					<lv_label text="Heatbed Temp"
					          style_text_font="montserrat_20"
					          style_text_color="#text_primary"
					          style_pad_bottom="8"/>

					<!-- Subtitle -->
					<lv_label text="Heat bed"
					          style_text_font="montserrat_16"
					          style_text_color="#text_secondary"/>
				</lv_obj>

				<!-- Card 4: Extrude/Retract -->
				<lv_obj name="card_extrusion"
				        width="400" height="200"
				        flex_flow="column"
				        flex_main_place="center"
				        flex_cross_place="center"
				        style_bg_color="#card_bg"
				        style_radius="12"
				        style_pad_all="24"
				        style_border_width="0">

					<!-- Icon -->
					<lv_label text="#icon_filament"
					          style_text_font="fa_icons_64"
					          style_text_color="#primary_color"
					          style_pad_bottom="16"/>

					<!-- Label -->
					<lv_label text="Extrude/Retract"
					          style_text_font="montserrat_20"
					          style_text_color="#text_primary"
					          style_pad_bottom="8"/>

					<!-- Subtitle -->
					<lv_label text="Filament control"
					          style_text_font="montserrat_16"
					          style_text_color="#text_secondary"/>
				</lv_obj>

				<!-- Card 5: Fan Control (Phase 2 - Placeholder) -->
				<lv_obj name="card_fan"
				        width="400" height="200"
				        flex_flow="column"
				        flex_main_place="center"
				        flex_cross_place="center"
				        style_bg_color="#card_bg"
				        style_radius="12"
				        style_pad_all="24"
				        style_border_width="0"
				        style_opa="128">  <!-- Disabled appearance -->

					<!-- Icon -->
					<lv_label text="#icon_settings"
					          style_text_font="fa_icons_64"
					          style_text_color="#text_secondary"
					          style_pad_bottom="16"/>

					<!-- Label -->
					<lv_label text="Fan Control"
					          style_text_font="montserrat_20"
					          style_text_color="#text_secondary"
					          style_pad_bottom="8"/>

					<!-- Subtitle -->
					<lv_label text="Coming soon"
					          style_text_font="montserrat_16"
					          style_text_color="#text_secondary"/>
				</lv_obj>

				<!-- Card 6: Motors Disable -->
				<lv_obj name="card_motors"
				        width="400" height="200"
				        flex_flow="column"
				        flex_main_place="center"
				        flex_cross_place="center"
				        style_bg_color="#card_bg"
				        style_radius="12"
				        style_pad_all="24"
				        style_border_width="0">

					<!-- Icon -->
					<lv_label text="#icon_advanced"
					          style_text_font="fa_icons_64"
					          style_text_color="#primary_color"
					          style_pad_bottom="16"/>

					<!-- Label -->
					<lv_label text="Motors Disable"
					          style_text_font="montserrat_20"
					          style_text_color="#text_primary"
					          style_pad_bottom="8"/>

					<!-- Subtitle -->
					<lv_label text="Release steppers"
					          style_text_font="montserrat_16"
					          style_text_color="#text_secondary"/>
		</lv_obj>

	</view>
</component>
