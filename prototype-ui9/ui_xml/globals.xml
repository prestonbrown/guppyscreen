		<str name="icon_advanced" value=""/>  <!-- U+F142 ellipsis-vertical -->
		<str name="icon_arrow_down" value="↓"/>  <!-- U+2193 downwards arrow -->
		<str name="icon_arrow_down_left" value="↙"/>  <!-- U+2199 diagonal down-left -->
		<str name="icon_arrow_down_right" value="↘"/>  <!-- U+2198 diagonal down-right -->
		<str name="icon_arrow_left" value="←"/>  <!-- U+2190 leftwards arrow -->
		<str name="icon_arrow_right" value="→"/>  <!-- U+2192 rightwards arrow -->
		<str name="icon_arrow_up" value="↑"/>  <!-- U+2191 upwards arrow -->
		<str name="icon_arrow_up_left" value="↖"/>  <!-- U+2196 diagonal up-left -->
		<str name="icon_arrow_up_line" value=""/>  <!-- U+F342 arrow-up-from-line -->
		<str name="icon_arrow_up_right" value="↗"/>  <!-- U+2197 diagonal up-right -->
		<str name="icon_arrows_all" value=""/>  <!-- U+F0B2 arrows-up-down-left-right -->
		<str name="icon_backspace" value=""/>  <!-- U+F55A delete-left -->
