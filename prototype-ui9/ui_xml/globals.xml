<component>
	<!-- Global theme colors and dimensions -->
	<consts>
		<!-- Main colors -->
		<color name="bg_dark" value="0x1a1a1a"/>
		<color name="panel_bg" value="0x111410"/>
		<color name="card_bg" value="0x202020"/>
		<color name="card_bg_dark" value="0x3a3d42"/>

		<!-- Text colors -->
		<color name="text_primary" value="0xffffff"/>
		<color name="text_secondary" value="0x909090"/>

		<!-- Brand colors -->
		<color name="primary_color" value="0xff4444"/>
		<color name="accent_color" value="0x00aaff"/>
		<color name="success_color" value="0x4caf50"/>  <!-- Green for confirm buttons -->
		<color name="warning_color" value="0xff9800"/>  <!-- Orange for warnings -->

		<!-- UI dimensions -->
		<px name="nav_width" value="102"/>
		<px name="nav_padding" value="16"/>
		<px name="nav_button_size" value="70"/>
		<px name="card_radius" value="8"/>
		<px name="padding_normal" value="20"/>
		<px name="padding_medium" value="12"/>  <!-- Medium padding/gap for buttons and flex items -->
		<px name="padding_small" value="10"/>
		<px name="printer_img_size" value="400"/>
		<px name="accent_bar_width" value="4"/>
		<px name="accent_bar_height" value="28"/>
		<px name="accent_bar_gap" value="18"/>
		<percent name="card_width" value="45%"/>
		<percent name="card_height" value="80%"/>

		<!-- Print file card dimensions - responsive layouts for different screen sizes -->
		<!-- Shared constants -->
		<px name="print_file_card_padding" value="12"/>
		<px name="print_file_card_spacing" value="8"/>
		<color name="print_file_card_thumbnail_bg" value="0x2a2a2a"/>

		<!-- 5-column layout (1280 & 1024 screens) -->
		<!-- Content: ~890-1146px, 5 cards with 20px gaps -->
		<px name="print_file_card_width_5col" value="205"/>
		<px name="print_file_card_height_5col" value="280"/>
		<px name="print_file_card_thumb_5col" value="180"/>
		<px name="print_file_card_gap_5col" value="20"/>

		<!-- 4-column layout (800 screens) -->
		<!-- Content: ~666px, 4 cards with 20px gaps -->
		<px name="print_file_card_width_4col" value="151"/>
		<px name="print_file_card_height_4col" value="280"/>
		<px name="print_file_card_thumb_4col" value="127"/>
		<px name="print_file_card_gap_4col" value="20"/>

		<!-- 3-column layout (480 screens) -->
		<!-- Content: ~346px, 3 cards with 12px gaps -->
		<px name="print_file_card_width_3col" value="107"/>
		<px name="print_file_card_height_3col" value="200"/>
		<px name="print_file_card_thumb_3col" value="83"/>
		<px name="print_file_card_gap_3col" value="12"/>

		<!-- Button dimensions -->
		<px name="button_height" value="50"/>
		<px name="button_padding" value="12"/>
		<px name="button_height_small" value="48"/>   <!-- Icon buttons, back buttons -->
		<px name="button_height_normal" value="56"/>  <!-- Primary action buttons -->

		<!-- Card styling -->
		<px name="card_radius_large" value="12"/>     <!-- Larger radius for prominent cards -->
		<px name="padding_card" value="16"/>          <!-- Standard internal card padding -->
		<px name="padding_card_emphasis" value="20"/> <!-- Emphasis cards (progress, highlights) -->

		<!-- Spacing and gaps -->
		<px name="gap_normal" value="12"/>            <!-- Standard gap between flex items -->
		<px name="gap_large" value="16"/>             <!-- Larger gap for major sections -->
		<px name="gap_small" value="8"/>              <!-- Compact gap for tight layouts -->
		<px name="gap_tiny" value="6"/>               <!-- Very tight gap for dense info -->

		<!-- Typography -->
		<str name="font_body" value="montserrat_16"/>      <!-- Standard body text -->
		<str name="font_heading" value="montserrat_20"/>   <!-- Section headings -->
		<str name="font_large" value="montserrat_48"/>     <!-- Large display text -->

		<!-- Component dimensions -->
		<px name="header_height" value="60"/>              <!-- Standard header bar height -->
		<px name="progress_bar_height" value="16"/>        <!-- Progress indicator height -->
		<px name="divider_height" value="1"/>              <!-- Separator line height -->
		<opacity name="divider_opacity" value="30"/>       <!-- Separator line opacity -->

		<!-- Detail view dimensions -->
		<px name="detail_metadata_height" value="100"/>
		<px name="detail_back_icon_size" value="32"/>
		<px name="detail_separator_height" value="2"/>

		<!-- Motion panel dimensions -->
		<px name="jog_button_size" value="76"/>          <!-- Reduced from 80 to fit 3 buttons + gaps in container -->
		<px name="jog_pad_size" value="320"/>
		<px name="jog_pad_padding" value="20"/>
		<px name="jog_pad_gap" value="12"/>
		<px name="distance_button_width" value="85"/>    <!-- Increased from 70 to fit "100mm" text -->
		<px name="distance_button_height" value="42"/>   <!-- Increased from 36 to fit text without clipping -->
		<px name="home_button_width" value="120"/>       <!-- Increased from 100 to fit "Home All" text -->
		<px name="home_button_height" value="44"/>       <!-- Increased from 40 for better proportions -->
		<px name="z_button_width" value="140"/>          <!-- Increased from 120 to fit icon + "10mm" text -->
		<px name="z_button_height" value="58"/>          <!-- Increased slightly for better proportions -->
		<px name="position_card_height" value="140"/>
		<px name="z_controls_height" value="280"/>       <!-- Increased to accommodate taller Z buttons -->

		<!-- Overlay/Modal Panel Dimensions -->
		<!-- Used for numeric keypad, temperature panels, and other overlay panels -->
		<!-- Responsive percentages: 68% = standard overlays, 83% = complex 2-column layouts -->
		<percent name="overlay_panel_width" value="68%"/>       <!-- Standard overlay width (temps, simple panels) -->
		<percent name="overlay_panel_width_large" value="83%"/> <!-- Large overlay width (motion, complex 2-column panels) -->

		<!-- Numeric Keypad Modal dimensions -->
		<!-- Now uses overlay_panel_width for consistency (68% responsive) -->
		<px name="keypad_padding" value="40"/>
		<px name="keypad_section_gap" value="40"/>
		<px name="keypad_input_height" value="120"/>
		<px name="keypad_button_width" value="140"/>
		<px name="keypad_button_height" value="100"/>
		<px name="keypad_button_gap" value="20"/>

		<!-- Keypad colors -->
		<color name="keypad_bg" value="0x2a2a2a"/>          <!-- Dark card background -->
		<color name="keypad_input_bg" value="0x1e1e1e"/>    <!-- Darker input display -->
		<color name="keypad_button_bg" value="0x505050"/>   <!-- Number button gray (much lighter!) -->
		<color name="keypad_button_esc_bg" value="0x666666"/> <!-- ESC mid-gray -->
		<color name="keypad_ok_bg" value="0x4caf50"/>       <!-- Green OK button -->
		<color name="keypad_accent_orange" value="0xff9800"/> <!-- Orange backspace -->

		<!-- Motion control button colors -->
		<color name="jog_button_bg" value="0x505050"/>      <!-- Jog pad buttons (much lighter for better contrast!) -->
		<color name="jog_selected_distance" value="0xcc3333"/> <!-- Softer red for selected distance -->

