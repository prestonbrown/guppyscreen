		<str name="icon_controls" value=""/>  <!-- U+F1DE sliders -->
		<str name="icon_ethernet" value=""/>  <!-- U+F796 ethernet -->
		<str name="icon_fan" value=""/>  <!-- U+F863 fan -->
		<str name="icon_filament" value=""/>  <!-- U+F576 fill-drip -->
		<str name="icon_fire" value=""/>  <!-- U+F06D fire -->
		<str name="icon_folder" value=""/>  <!-- U+F07C folder-open -->
		<str name="icon_home" value=""/>  <!-- U+F015 house -->
		<str name="icon_leaf" value=""/>  <!-- U+F06C leaf -->
		<str name="icon_lightbulb" value=""/>  <!-- U+F0EB lightbulb -->
		<str name="icon_list" value=""/>  <!-- U+F03A list -->
		<str name="icon_power_off" value=""/>  <!-- U+F011 power-off -->
		<str name="icon_settings" value=""/>  <!-- U+F013 gear -->
		<str name="icon_temperature" value=""/>  <!-- U+F2C7 thermometer-half -->
		<str name="icon_th_large" value=""/>  <!-- U+F009 th-large -->
		<str name="icon_trash" value=""/>  <!-- U+F1F8 trash -->
		<str name="icon_wifi" value=""/>  <!-- U+F1EB wifi -->
		<str name="icon_wifi_slash" value=""/>  <!-- U+F127 wifi-slash -->	</consts>

